@model IEnumerable<FS20.Models.Competition>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
    <head>
        <link rel="stylesheet" href="~/css/group.css" />
    </head>
<h1>Competitions</h1>

<p>
    <a class="btn btn-success" asp-action="Create">Create New</a>
</p>
<table class="table table table-striped table-bordered"  style="background-color:whitesmoke;opacity:0.9">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                Is Active
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CompetitionType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Season)
            </th> 
            <th>
                Edit
            </th>
            <th>
                Details
            </th>
            <th>
                Delete
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsActive)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CompetitionType.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Season.Name)
            </td>
            <td>
                <a class="btn btn-success" asp-action="Edit" asp-route-id="@item.CompetitionID">Edit</a> 
            </td>
            <td>
                <a class="btn btn-info" asp-action="Details" asp-route-id="@item.CompetitionID">Details</a> 
            </td>
            <td>
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.CompetitionID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
